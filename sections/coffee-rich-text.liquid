{{ 'section-coffee-rich-text.css' | asset_url | stylesheet_tag }}

<div class="coffee-rich-text">
    <div class="heading">
        {{ section.settings.custom_text_title }}
    </div>
    {% if section.settings.image != blank %}
    <div class="badge-container">
        <div class="badge">
            {{section.settings.image | image_url: width: 100, height: 150, format: 'jpg'  | image_tag}}
        </div>
        <div class="badge">
            {{section.settings.image | image_url: width: 100, height: 150, format: 'jpg'  | image_tag}}
        </div>
    </div>
    {% else %}
        Hi Stranger!
    {% endif %}
</div>

{% schema %}
{
  "name": "Coffee-Rich-Text",
  "settings": [
    {
        "id": "custom_text_title",
        "type": "text",
        "label": "Text",
        "default": "Title"
    },
    {
        "type": "image_picker",
        "id": "image",
        "label": "Test"
    }
  ],
  "presets": [
    {
        "name": "Coffee-Rich-Text"
    }
  ]
}
{% endschema %}